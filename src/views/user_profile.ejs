<%- include('partials/head', { title: 'IM Planner | User' }) %>
<%- include('partials/nav') %>
<div class="container">
  <div class="card">
    <h1 class="card-title"><%= user.name || user.email %></h1>
    <p class="small-note">
      <%= user.email %> · <%= user.role || 'user' %> · <%= user.status %>
      <% if (isSelf) { %>
        · <a href="/profile">Edit profile</a>
      <% } %>
    </p>
  </div>

  <div class="card">
    <h2 class="card-title">Experiments</h2>
    <table class="pure-table table-compact">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Status</th>
          <th>Created</th>
        </tr>
      </thead>
      <tbody>
        <% if (experiments.length === 0) { %>
          <tr>
            <td colspan="4">No experiments assigned.</td>
          </tr>
        <% } %>
        <% experiments.forEach((exp) => { %>
          <tr>
            <td><%= exp.id %></td>
            <td><a href="/experiments/<%= exp.id %>"><%- formatInline(exp.name) %></a></td>
            <td><span class="status-pill status-<%= exp.status %>"><%= exp.statusLabel %></span></td>
            <td><%= new Date(exp.created_at).toLocaleDateString() %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>
<%- include('partials/foot') %>
